<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="itemList"
                  type="com.dot.baseandroid.menu.list.viewmodels.ItemListViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_recycler_view_padding"
            android:layout_marginRight="@dimen/item_recycler_view_padding"
            android:layout_marginBottom="@dimen/item_recycler_view_padding">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewItemList"
                android:layout_width="@dimen/image_view_list_size"
                android:layout_height="@dimen/image_view_list_size"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageViewItemList"
                android:layout_toEndOf="@id/imageViewItemList"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_recycler_view_padding"
                android:layout_marginLeft="@dimen/item_recycler_view_padding">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_title_item_list_size"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="@tools:sample/lorem"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_sub_title_item_list_size"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="@tools:sample/lorem"/>

        </LinearLayout>

    </RelativeLayout>

</layout>