<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="galleryDetail"
                  type="com.dot.baseandroid.menu.gallery.viewmodels.FragmentGalleryDetailViewModel"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/global_detail_image_height"
                android:scaleType="centerCrop"
                app:setImageUrl="@{galleryDetail.imageUrl}"
                tools:srcCompat="@tools:sample/backgrounds/scenic"/>

        <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_recycler_view_margin"
                android:layout_marginLeft="@dimen/item_recycler_view_margin"
                android:layout_marginRight="@dimen/item_recycler_view_margin"
                android:textSize="@dimen/_12ssp"
                android:text="@{galleryDetail.caption}"
                tools:text="@tools:sample/lorem/random"/>

    </LinearLayout>

</layout>